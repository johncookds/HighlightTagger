{
  "name": "Word Reminder",
  "version": "1.0",
  "description": "Word Reminder.",
  "browser_action": {
    "default_icon": "images/stick-man1.gif",
	"popup":"popup.html"
  },
  
  "background_page": "background.html",

  "content_scripts": [
    {
		"matches": ["<all_urls>"],
      "js": ["js/myscript.js"]
    }
  ],
  
  "permissions": [
    "http://*/*",
    "https://*/*",
	"contextMenus",
	"tabs"
  ]
}